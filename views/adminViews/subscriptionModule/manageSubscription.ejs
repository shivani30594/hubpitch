<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../adminComponents/headerFile.ejs %>
</head>

<body>
    <% include ../adminComponents/header.ejs %>
    <div class="form-wrapper">
        <div class="container">
            <div class="row">

                <div class="card-box">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-8">
                                <h4 class="m-t-0 header-title">All Subscription</h4>
                                <p class="text-muted m-b-30 font-14">Manage All Subscription Plans From Here.</p>
                            </div>
                            <div class="col-md-4">
                                <div class="custom-right right"><a class="btn btn-primary" href="/admin/add-plan"><span class="glyphicon glyphicon-plus">
                                        </span> Add Plans </a></div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="row data-table-wapper">
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Plan Name</th>
                                            <th>Plan Price</th>
                                            <th>Created</th>
                                            <th>Actions </th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbody_datatable">
                                        <% for(var i=0; i < data.length; i++) { %>
                                        <tr>
                                            <td>
                                                <%= data[i].plan_name %>
                                            </td>
                                            <td>
                                                <%= data[i].plan_price %>
                                            </td>
                                            <td>
                                                <%= data[i].niceDate %>
                                            </td>
                                            <td>
                                                <a class="action-table" href="/admin/edit-plan/<%= data[i].plan_id %>">
                                                    <span class="glyphicon glyphicon-pencil"></span>
                                                </a>
                                                <a class="action-table" href="javascript:ConfirmDelete(<%= data[i].plan_id %>,'<%= data[i].plan_key %>')">
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </a>
                                            </td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <!-- LOADER  -->
    <div class="loader_hp_">
        <i class="fa fa-spinner fa-spin" style="font-size:24px"></i>
    </div>

    <script src="/js/module/admin/subscriptionModule/manageMembership.js"></script>
</body>

</html>