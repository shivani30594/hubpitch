<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>
		<%= title %>
	</title>

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
	<!-- bootstrap CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
	<!-- Optional theme -->

	<script src="/js/jquery.min.js"></script>
	<!--jquery js-->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<!-- bootstrap js -->
	<script src="https://use.fontawesome.com/8a22b161e0.js"></script>
	<!-- font awesome -->

	<link rel='stylesheet' href='/stylesheets/style.css' />
	<!-- custom css -->
	
	<!-- Validation.Js -->
	<script src="/js/jquery.validate.min.js"></script>
	<script src="/js/additional-methods.min.js"></script>
</head>

<body>
	<section class="signup-wrap">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="logo-wrap">
						<a href="#">
							<img src="/img/logo.png" alt="Logo">
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="signup-wrapper">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="form-wrap">
						<div class="head">Sign In</div>
						<div class="sign-up-form">
							<form method="post" class="sign-in-form" name="sign_in" id="sign_in">
								<div class="row">
									<div class="col-md-12">
										<div class="input-group">
											<input type="email" class="form-control" placeholder="Email Address" name="email">
										</div>
									</div>
									<div class="col-md-12">
										<div class="input-group">
											<input type="password" class="form-control" placeholder="Password" name="password">
										</div>
									</div>
									<div class="form-bottom">
										<div class="col-md-6 col-sm-6 col-xs-7">
											<div class="form-group rem-me">
												<label class="checkbox-inline">
													<input type="checkbox" class="styled">
													<span class="chk_check"></span>
													Remember Me
												</label>
											</div>

										</div>
										<div class="col-md-6 col-sm-6 col-xs-5">
											<button type="submit" name="login" class="continue-btn">Continue</button>
										</div>
										<div class="col-md-12 col-xs-12">
											<a href="/forgot-password" class="sign-up-link">Forgot Password</a>
										</div>
										<div class="col-md-12 col-xs-12">
											<a href="/signup" class="sign-up-link">Sign Up A New User</a>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<script src="/js/module/login.js"></script>
</body>

</html>