<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>
        <%= title %>
    </title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
    <!-- Optional theme -->

    <script src="/js/jquery.min.js"></script>
    <!--jquery js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- bootstrap js -->
    <script src="https://use.fontawesome.com/8a22b161e0.js"></script>
    <!-- font awesome -->

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- custom css -->

    <link rel="shortcut icon" type="image/x-icon" href="https://static1.squarespace.com/static/5aecd8b436099b8b647ad307/t/5b74e630aa4a9903e4cca041/favicon.ico"
    />

    <!-- Validation.Js -->
    <script src="/js/jquery.validate.min.js"></script>
</head>

<body>
    <section class="signup-wrap">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="logo-wrap">
                        <a href="#">
                            <img src="img/logo.png" alt="Logo">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="row">
        <div class="modal fade" id="information" role="dialog">
            <div class="modal-dialog">

                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Reset Password Link</h4>
                        <button type="button" class="close" data-dismiss="modal" style="top:7% !important;">&times;</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="signup-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-wrap">
                        <div class="head">Forgot Password</div>
                        <div class="sign-up-form">
                            <form method="post" name="forgot" class="forgot_from" id="forgot_form">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="input-group">
                                            <input type="email" class="form-control" name="email" placeholder="Email Address">
                                        </div>
                                    </div>
                                    <div class="form-bottom">
                                        <div class="col-md-6 col-sm-6">
                                            <button type="submit" class="continue-btn" id="forgot_btn">Get Link</a>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-5">
                                            <a href="/" class="continue-btn">
                                                <i class="glyphicon glyphicon-arrow-left"></i>
                                                Back To Login</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="/js/module/login.js"></script>
</body>

</html>