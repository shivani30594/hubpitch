<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../adminComponents/headerFile.ejs %>
</head>

<body>
    <% include ../adminComponents/header.ejs %>
        <div class="form-wrapper">
            <div class="container">
                <div class="row">

                    <div class="card-box">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-8">
                                    <h4 class="m-t-0 header-title">All Support Information</h4>
                                    <p class="text-muted m-b-30 font-14">Manage All Support Information From Here.</p>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="row data-table-wapper">
                                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Support Message</th>
                                                <th>Created </th>
                                                <th>Actions </th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbody_datatable">
                                            <% for(var i=0; i < data.length; i++) { %>
                                                <tr>
                                                    <td>
                                                        <%= data[i].first_name %>
                                                    </td>
                                                    <td>
                                                        <%= data[i].email %>
                                                    </td>

                                                    <td class="support_text">
                                                        <%= data[i].support_message %>
                                                    </td>
                                                    <% if(data[i].status=="active"){%>
                                                        <td>
                                                            <button type="button" class="btn btn-danger" onclick="myActivate('<%= data[i].user_id %>')">Pending</button>
                                                        </td>
                                                        <% } else { %>
                                                            <td>
                                                                <button type="button" class="btn btn-success">Resolved</button>
                                                            </td>
                                                            <% } %>
                                                                <td>
                                                                    <%= data[i].created %>
                                                                </td>

                                                </tr>
                                                <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                    </div>
                    <div class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- LOADER  -->
        <div class="loader_hp_">
            <i class="fa fa-spinner fa-spin" style="font-size:24px"></i>
        </div>

        <script src="/js/module/admin/manageSupport.js"></script>
</body>

</html>